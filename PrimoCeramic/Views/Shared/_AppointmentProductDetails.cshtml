@model List<PrimoCeramic.Models.Products>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@if (Model.Count > 0)
{


<table class="table table-responsive-sm" width="100%">
    <tr class="table-info">
        <th style="text-align:center;width:20%"></th>
        <th style="text-align:center;">
            <label asp-for="@Model.FirstOrDefault().Name"></label>
        </th>
        <th style="text-align:center;">
            <label asp-for="@Model.FirstOrDefault().Price"></label>
        </th>
        <th style="text-align:center;">
            <label asp-for="@Model.FirstOrDefault().ShadeColor"></label>
        </th>
        <th style="text-align:center;">
            <label asp-for="@Model.FirstOrDefault().ProductTypes.Name"></label>
        </th>
        <th style="text-align:center;"></th>
    </tr>
    @foreach (var item in Model)
    {
    <tr style="padding:50px">
        <td>
            <a asp-area="Customer" asp-controller="Ceramic" asp-action="Details" asp-route-id="@item.Id">

                <img src="@item.Image" width="100px" style="margin:auto; display:block;border-radius:5px;border:1px solid #bbb9b9" />
            </a>
        </td>
        <td style="text-align:center">
            @Html.DisplayFor(c => item.Name)

        </td>
        <td style="text-align:center">
            @Html.DisplayFor(c => item.Price)

        </td>
        <td style="text-align:center">
            @Html.DisplayFor(c => item.ShadeColor)
        </td>
        <td style="text-align:center">
        
            @Html.DisplayFor(c => item.ProductTypes.Name)

        </td>
        <td style="text-align:center">
        
          

        </td>
    </tr>
    }
</table>
}
else
{
<div> No Items added to the shoping cart</div>
}