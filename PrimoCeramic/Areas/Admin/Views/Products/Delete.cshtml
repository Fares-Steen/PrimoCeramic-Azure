@model PrimoCeramic.Models.ViewModel.ProductsViewModel
@using PrimoCeramic.Extensions
@{
    ViewData["Title"] = "Delete";
}

<br />
<br />
<br />

<h2 class="text-info">Product </h2>

<form method="post" >
    @*asp-action="Create"*@

    <div class="p-4 border rounded row">
        <input hidden asp-for="Products.Id" />
        
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">

                    <label asp-for="Products.Name"></label>
                </div>
                <div class="col-8">

                    <input asp-for="Products.Name" disabled class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">

                    <label asp-for="Products.Price"></label>
                </div>
                <div class="col-8">

                    <input asp-for="Products.Price" disabled class="form-control" />
                </div>

            </div>
           
            <div class="form-group row">
                <div class="col-4">

                    <label asp-for="ProductTypes"></label>
                </div>
                <div class="col-8">

                    <input asp-for="Products.ProductTypes.Name" readonly class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">

                    <label asp-for="SpecialTags"></label>
                </div>
                <div class="col-8">

                    <input asp-for="Products.SpecialTags.Name" readonly class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">

                    <label asp-for="Products.ShadeColor"></label>
                </div>
                <div class="col-8">

                    <input asp-for="Products.ShadeColor" disabled class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">

                    <label asp-for="Products.Available"></label>
                </div>
                <div class="col-8">

                    <input type="checkbox" asp-for="Products.Available" disabled />
                </div>

            </div>
        </div>
        <div class="col-1">

        </div>

        <div class="col-3">

            <img src="@Model.Products.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-danger" asp-route-id="@Model.Products.Id" value="Delete" />
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}