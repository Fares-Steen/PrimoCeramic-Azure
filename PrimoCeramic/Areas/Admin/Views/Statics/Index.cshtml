@model IEnumerable<PrimoCeramic.Models.Statics>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<br />

<div class="row">
    <div class="col-6">

        <h2 class="text-info">Special Tags List</h2>
    </div>

    <div class="col-6 text-right">

        <a asp-action="Create" class="btn btn-info">&nbsp;<i class="fas fa-plus"></i> New Special Tag</a>
    </div>

</div>

<br />

<table class="table table-striped border">
    <tr class="table-info">

        <th>
            @Html.DisplayNameFor(m => m.Name)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.DoubleValue)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.BoolValue)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.StringValue)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.DateValue)
        </th>
        <th></th>
        <th></th>

    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(m => item.Name)
        </td>
        <td>
            @Html.DisplayFor(m => item.DoubleValue)
        </td>
        <td>
            @Html.DisplayFor(m => item.BoolValue)
        </td>
        <td>
            @Html.DisplayFor(m => item.StringValue)
        </td>
        <td>
            @Html.DisplayFor(m => item.DateValue)
        </td>
        <td>
            <partial name="_TableButtonPartial" model="item.Id" />
        </td>

    </tr>
    }

</table>
