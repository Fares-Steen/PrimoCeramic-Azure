
@*coming from controller*@
@model PrimoCeramic.Models.Statics
@{
    ViewData["Title"] = "Edit";
}

<br />
<br />
<br />
@*the subject*@
<h2 class="text-info">Edit The Special Tag</h2>

@*create the edit form and call the Edit method from controller*@
<form method="post" asp-action="Edit">
    <div class="p-4 border rounded">

        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">

                <label asp-for="Name"></label>
            </div>
            <div class="col-5">

                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div class="form-group row">

            @*to show the column name*@
            <div class="col-2">
                <label asp-for="DoubleValue"></label>

            </div>
            <div class="col-5">
                @*to insert textbox to enter the special tag name*@
                <input asp-for="DoubleValue" class="form-control" />
            </div>
            @*to show validation of the Name(cant be empty)*@
            <span asp-validation-for="DoubleValue" class="text-danger"></span>
        </div>
        <div class="form-group row">

            @*to show the column name*@
            <div class="col-2">
                <label asp-for="BoolValue"></label>

            </div>
            <div class="col-5">
                @*to insert textbox to enter the special tag name*@
                <input asp-for="BoolValue" class="form-control" />
            </div>
            @*to show validation of the Name(cant be empty)*@
            <span asp-validation-for="BoolValue" class="text-danger"></span>
        </div>
        <div class="form-group row">

            @*to show the column name*@
            <div class="col-2">
                <label asp-for="StringValue"></label>

            </div>
            <div class="col-5">
                @*to insert textbox to enter the special tag name*@
                <input asp-for="StringValue" class="form-control" />
            </div>
            @*to show validation of the Name(cant be empty)*@
            <span asp-validation-for="StringValue" class="text-danger"></span>
        </div>
        <div class="form-group row">

            @*to show the column name*@
            <div class="col-2">
                <label asp-for="DateValue"></label>

            </div>
            <div class="col-5">
                @*to insert textbox to enter the special tag name*@
                <input asp-for="DateValue" class="form-control" />
            </div>
            @*to show validation of the Name(cant be empty)*@
            <span asp-validation-for="DateValue" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" asp-route-id="@Model.Id" value="Update" />
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}