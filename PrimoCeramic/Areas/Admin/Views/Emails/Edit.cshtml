
@*coming from controller*@
@model PrimoCeramic.Models.Emails
@{
    ViewData["Title"] = "Edit";
}

<br />
<br />
<br />
@*the subject*@
<h2 class="text-info">Edit Email</h2>

@*create the edit form and call the Edit method from controller*@
<form method="post" asp-action="Edit">
    <div class="p-4 border rounded">

        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">

                <label asp-for="Email"></label>
            </div>
            <div class="col-5">

                <input asp-for="Email" class="form-control" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">

                <label asp-for="Password"></label>
            </div>
            <div class="col-5">

                <input asp-for="Password"type="password" class="form-control" />
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">

                <label asp-for="EmailType"></label>
            </div>
            <div class="col-5">

                <input asp-for="EmailType" class="form-control" />
            </div>
            <span asp-validation-for="EmailType" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">

                <label asp-for="Port"></label>
            </div>
            <div class="col-5">

                <input asp-for="Port" class="form-control" />
            </div>
            <span asp-validation-for="Port" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">

                <label asp-for="Map"></label>
            </div>
            <div class="col-5">

                <input asp-for="Map" class="form-control" />
            </div>
            <span asp-validation-for="Map" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" asp-route-id="@Model.Id" value="Update" />
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}