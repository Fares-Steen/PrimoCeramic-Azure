@model IEnumerable<PrimoCeramic.Models.Emails>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<br />

<div class="row">
    <div class="col-6">

        <h2 class="text-info">Emails List</h2>
    </div>

    <div class="col-6 text-right">

        <a asp-action="Create" class="btn btn-info">&nbsp;<i class="fas fa-plus"></i> New Email</a>
    </div>

</div>

<br />

<table class="table table-striped border">
    <tr class="table-info">

        <th>
            @Html.DisplayNameFor(m => m.Email)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.EmailType)
        </th>
        <th>

        </th>
        <th>

        </th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(m => item.Email)
        </td>
        <td>
            @Html.DisplayFor(m => item.EmailType)
        </td>
        <td>
            <partial name="_TableButtonPartial" model="item.Id" />
        </td>

    </tr>
    }

</table>
