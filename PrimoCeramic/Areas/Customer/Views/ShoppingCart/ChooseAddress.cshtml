@model PrimoCeramic.Models.ViewModel.CustomerAddressRole

@{
    ViewData["Title"] = "ChooseAddress";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">

    <div class="col-6">
        <h2 class="text-info">Addresses List</h2>

        
    </div>
    <div class="col-6 text-right">
        <a asp-area="Customer" asp-controller="Address" asp-action="Create" asp-route-returnUrl="/Customer/ShoppingCart/ChooseAddress" class="btn btn-info">&nbsp; <i class="fas fa-plus"></i> New Address </a>
    </div>
</div>
<form method="post">
    
    <div class="container">
        @if (Model.CustomerAddress.Count() == 0)
        {
            <h5>Please add an address</h5>
        }
        else
        {
            <h2>Choose an address</h2>
        }
        @foreach (var item in Model.CustomerAddress)
        {
            <div class="row border border-dark" style="padding:10px;color:white">


                <div class="col-lg-12 col-sm-12 ">
                    @Html.DisplayFor(x => item.Country)
                </div>
                <div class="col-lg-12 col-sm-12 ">
                    @Html.DisplayFor(x => item.City)
                </div>
                <div class="col-lg-12 col-sm-12 ">
                    @Html.DisplayFor(x => item.Address)
                </div>
                <div class="col-lg-12 col-sm-12 ">
                    @Html.DisplayFor(x => item.Phone)
                </div>
                <div class="col-lg-12 col-sm-12 ">
                    <input type="radio" value="@item.Id" asp-for="SelectedRole" />
                </div>
            </div>
        }
    </div>

    <input type="submit" value="Confirme" disabled class="btn btn-primary"/>


</form>

