@model PrimoCeramic.Models.CustomerAddress
@using PrimoCeramic.Extensions
@{
    ViewData["Title"] = "Edit";
}

<br />
<br />
<br />

<h2 class="text-info">Edit Address </h2>

<form method="post" enctype="multipart/form-data">
    @*asp-action="Create"*@

    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-lg-2 col-sm-12">

                <label asp-for="Country"></label>
            </div>
            <div class="col-lg-5 col-sm-12">

                <select asp-for="Country" class="form-control">
                    <option value="Saudi Arabia">Saudi Arabia</option>
                    <option value="Bahrain">Bahrain</option>
                    <option value="United Arab Emirates">United Arab Emirates</option>
                    <option value="Kuwait">Kuwait</option>
                    <option value="Qatar">Qatar</option>
                </select>
            </div>
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-lg-2 col-sm-12">

                <label asp-for="City"></label>
            </div>
            <div class="col-lg-5 col-sm-12">

                <input asp-for="City" class="form-control" />
            </div>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-lg-2 col-sm-12">

                <label asp-for="Address"></label>
            </div>
            <div class="col-lg-5 col-sm-12">

                <input asp-for="Address" class="form-control" />
            </div>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-lg-2 col-sm-12">

                <label asp-for="Phone"></label>
            </div>
            <div class="col-lg-5 col-sm-12">

                <input asp-for="Phone" class="form-control" />
            </div>
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
      

        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" asp-route-id="@Model.Id" value="Save" />
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}